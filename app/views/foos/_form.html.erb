<%= form_with model: foo do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% foo.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

